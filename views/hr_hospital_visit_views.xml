<odoo>
    <record id="view_hr_hospital_visit_tree" model="ir.ui.view">
        <field name="name">hr.hospital.visit.tree</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="disease_id"/>
                <field name="visit_date"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_hospital_visit_form" model="ir.ui.view">
        <field name="name">hr.hospital.visit.form</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="disease_id"/>
                        </group>
                        <group>
                            <field name="visit_date"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="diagnosis"/>
                    </group>
                    <group>
                        <field name="prescription"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_visit_window" model="ir.actions.act_window">
        <field name="name">Visits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.visit</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
