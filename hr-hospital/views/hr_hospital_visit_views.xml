<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_hospital_visit_tree" model="ir.ui.view">
        <field name="name">hr.hospital.visit.tree</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="scheduled_datetime"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="visit_type"/>
                <field name="state"/>
                <field name="diagnosis_count"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_hospital_visit_form" model="ir.ui.view">
        <field name="name">hr.hospital.visit.form</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_complete"
                            string="Complete"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'scheduled'"/>
                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            invisible="state not in ['scheduled']"/>
                    <button name="action_no_show"
                            string="No Show"
                            type="object"
                            invisible="state != 'scheduled'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="scheduled,completed"/>
                </header>
                <sheet>
                    <group>
                        <group string="Visit Information">
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="visit_type"/>
                            <field name="scheduled_datetime"/>
                            <field name="actual_datetime"
                                   readonly="state != 'completed'"/>
                        </group>
                        <group string="Financial">
                            <field name="cost"/>
                            <field name="currency_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Diagnoses" name="diagnoses">
                            <field name="diagnosis_ids">
                                <tree editable="bottom">
                                    <field name="disease_id"
                                           domain="[('is_contagious', '=', True), ('danger_level', 'in', ['high', 'critical'])]"/>
                                    <field name="severity"/>
                                    <field name="description"/>
                                    <field name="is_approved"/>
                                    <field name="approved_by_id"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="disease_id"/>
                                        <field name="severity"/>
                                        <field name="is_approved"/>
                                        <field name="approved_by_id"/>
                                        <field name="approval_date"/>
                                    </group>
                                    <group string="Description">
                                        <field name="description" nolabel="1"/>
                                    </group>
                                    <group string="Treatment">
                                        <field name="treatment" nolabel="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Recommendations" name="recommendations">
                            <field name="recommendations"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_visit_search" model="ir.ui.view">
        <field name="name">hr.hospital.visit.search</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <search>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <filter string="Scheduled"
                        name="scheduled"
                        domain="[('state', '=', 'scheduled')]"/>
                <filter string="Completed"
                        name="completed"
                        domain="[('state', '=', 'completed')]"/>
                <filter string="Today"
                        name="today"
                        domain="[('scheduled_datetime', '&gt;=', (context_today()).strftime('%Y-%m-%d')),
                                 ('scheduled_datetime', '&lt;', (context_today() + relativedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Doctor"
                            name="group_doctor"
                            context="{'group_by': 'doctor_id'}"/>
                    <filter string="Patient"
                            name="group_patient"
                            context="{'group_by': 'patient_id'}"/>
                    <filter string="Status"
                            name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Visit Type"
                            name="group_type"
                            context="{'group_by': 'visit_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hr_hospital_visit_window" model="ir.actions.act_window">
        <field name="name">Visits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.visit</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
