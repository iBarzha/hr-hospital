<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_doctor_speciality_tree" model="ir.ui.view">
        <field name="name">doctor.speciality.tree</field>
        <field name="model">doctor.speciality</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_doctor_speciality_form" model="ir.ui.view">
        <field name="name">doctor.speciality.form</field>
        <field name="model">doctor.speciality</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <group string="Doctors">
                        <field name="doctor_ids" nolabel="1">
                            <tree>
                                <field name="full_name"/>
                                <field name="license_number"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_doctor_speciality_window" model="ir.actions.act_window">
        <field name="name">Specialities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">doctor.speciality</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
