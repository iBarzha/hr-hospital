<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hr.hospital.patient.tree</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="full_name"/>
                <field name="date_of_birth"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="personal_doctor_id"/>
                <field name="phone"/>
                <field name="blood_type"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_hospital_patient_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.form</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_visits"
                            string="Visit History"
                            type="object"
                            class="oe_highlight"
                            icon="fa-calendar"/>
                    <button name="action_quick_visit"
                            string="Quick Visit"
                            type="object"
                            class="oe_highlight"
                            icon="fa-plus"/>
                </header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="passport_data"/>
                        </group>
                        <group string="Contact Information">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                            <field name="contact_person_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Medical Information">
                            <field name="blood_type"/>
                            <field name="personal_doctor_id"/>
                            <field name="allergies"/>
                        </group>
                        <group string="Insurance">
                            <field name="insurance_company_id"/>
                            <field name="insurance_policy_number"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Visits" name="visits">
                            <field name="visit_ids" readonly="1">
                                <tree>
                                    <field name="scheduled_datetime"/>
                                    <field name="doctor_id"/>
                                    <field name="visit_type"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Doctor History" name="doctor_history">
                            <field name="doctor_history_ids" readonly="1">
                                <tree>
                                    <field name="doctor_id"/>
                                    <field name="date_assigned"/>
                                    <field name="date_changed"/>
                                    <field name="change_reason"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Diagnosis History" name="diagnosis_history">
                            <field name="diagnosis_ids" readonly="1">
                                <tree>
                                    <field name="visit_id"/>
                                    <field name="disease_id"/>
                                    <field name="severity"/>
                                    <field name="is_approved"/>
                                    <field name="approved_by_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_patient_search" model="ir.ui.view">
        <field name="name">hr.hospital.patient.search</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="full_name"/>
                <field name="personal_doctor_id"/>
                <field name="phone"/>
                <filter string="Has Allergies"
                        name="has_allergies"
                        domain="[('allergies', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Personal Doctor"
                            name="group_doctor"
                            context="{'group_by': 'personal_doctor_id'}"/>
                    <filter string="Blood Type"
                            name="group_blood"
                            context="{'group_by': 'blood_type'}"/>
                    <filter string="Gender"
                            name="group_gender"
                            context="{'group_by': 'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hr_hospital_patient_window" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
