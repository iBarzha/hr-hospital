<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_contact_person_tree" model="ir.ui.view">
        <field name="name">contact.person.tree</field>
        <field name="model">contact.person</field>
        <field name="arch" type="xml">
            <tree>
                <field name="full_name"/>
                <field name="relationship"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="view_contact_person_form" model="ir.ui.view">
        <field name="name">contact.person.form</field>
        <field name="model">contact.person</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="relationship"/>
                            <field name="date_of_birth"/>
                            <field name="gender"/>
                        </group>
                        <group string="Contact Information">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Related Patients">
                        <field name="patient_ids" nolabel="1"
                               domain="[('allergies', '!=', False)]">
                            <tree>
                                <field name="full_name"/>
                                <field name="phone"/>
                                <field name="allergies"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_contact_person_window" model="ir.actions.act_window">
        <field name="name">Contact Persons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contact.person</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
