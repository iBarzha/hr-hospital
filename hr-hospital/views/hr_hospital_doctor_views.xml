<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.tree</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="full_name"/>
                <field name="speciality_id"/>
                <field name="license_number"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="is_intern"/>
                <field name="rating"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="gender"/>
                        </group>
                        <group string="Contact Information">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Professional Information">
                            <field name="speciality_id"/>
                            <field name="license_number"/>
                            <field name="license_date"/>
                            <field name="experience_years"/>
                            <field name="rating"/>
                            <field name="education_country_id"/>
                        </group>
                        <group string="System">
                            <field name="user_id"/>
                            <field name="is_intern"/>
                            <field name="mentor_id"
                                   invisible="not is_intern"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <!-- Mentor Info (for interns) -->
                    <group string="Mentor Information"
                           invisible="not is_intern or not mentor_id">
                        <group>
                            <field name="mentor_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <!-- Interns (for mentors) -->
                        <page string="My Interns" name="interns"
                              invisible="is_intern">
                            <field name="intern_ids" readonly="1">
                                <kanban>
                                    <field name="full_name"/>
                                    <field name="speciality_id"/>
                                    <field name="image_128"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('hr.hospital.doctor', 'image_128', record.id.raw_value)"
                                                         alt="Doctor"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong>
                                                        <field name="full_name"/>
                                                    </strong>
                                                    <div>
                                                        <field name="speciality_id"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Patients" name="patients">
                            <field name="patient_ids">
                                <tree>
                                    <field name="full_name"/>
                                    <field name="phone"/>
                                    <field name="blood_type"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Schedule" name="schedule">
                            <field name="schedule_ids">
                                <tree editable="bottom">
                                    <field name="day_of_week"/>
                                    <field name="date"/>
                                    <field name="time_from" widget="float_time"/>
                                    <field name="time_to" widget="float_time"/>
                                    <field name="schedule_type"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Visits" name="visits">
                            <field name="visit_ids" readonly="1">
                                <tree>
                                    <field name="scheduled_datetime"/>
                                    <field name="patient_id"/>
                                    <field name="visit_type"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="full_name"/>
                <field name="speciality_id"/>
                <field name="license_number"/>
                <separator/>
                <filter string="Mentors"
                        name="mentors"
                        domain="[('is_intern', '=', False), ('intern_ids', '!=', False)]"/>
                <filter string="Interns"
                        name="interns"
                        domain="[('is_intern', '=', True)]"/>
                <separator/>
                <filter string="Has License"
                        name="has_license"
                        domain="[('license_number', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Speciality"
                            name="group_speciality"
                            context="{'group_by': 'speciality_id'}"/>
                    <filter string="Education Country"
                            name="group_education"
                            context="{'group_by': 'education_country_id'}"/>
                    <filter string="Mentor"
                            name="group_mentor"
                            context="{'group_by': 'mentor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_hr_hospital_doctor_kanban" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.kanban</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban default_group_by="speciality_id">
                <field name="id"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="speciality_id"/>
                <field name="is_intern"/>
                <field name="intern_ids"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-menu">
                        <a role="menuitem" type="open" class="dropdown-item">View</a>
                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('hr.hospital.doctor', 'image_128', record.id.raw_value)"
                                     alt="Doctor"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="last_name"/> <field name="first_name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="speciality_id"/>
                                </div>
                                <t t-if="record.intern_ids.raw_value.length > 0">
                                    <div class="mt-2">
                                        <strong>Interns:</strong>
                                        <field name="intern_ids" widget="many2many_tags"/>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Quick Visit Form -->
    <record id="view_hr_hospital_visit_form_quick" model="ir.ui.view">
        <field name="name">hr.hospital.visit.form.quick</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="scheduled_datetime"/>
                    <field name="visit_type"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_doctor_window" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
</odoo>
