<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Patient: view only own visits -->
    <record id="rule_visit_patient" model="ir.rule">
        <field name="name">Patient: own visits only</field>
        <field name="model_id" ref="model_hr_hospital_visit"/>
        <field name="domain_force">[('patient_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hospital_patient'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Intern: view and edit own visits -->
    <record id="rule_visit_intern" model="ir.rule">
        <field name="name">Intern: own visits</field>
        <field name="model_id" ref="model_hr_hospital_visit"/>
        <field name="domain_force">[('doctor_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hospital_intern'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Doctor: view and edit own visits and intern visits -->
    <record id="rule_visit_doctor" model="ir.rule">
        <field name="name">Doctor: own and intern visits</field>
        <field name="model_id" ref="model_hr_hospital_visit"/>
        <field name="domain_force">['|', ('doctor_id.user_id', '=', user.id), ('doctor_id.mentor_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hospital_doctor'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Manager: view all visits -->
    <record id="rule_visit_manager" model="ir.rule">
        <field name="name">Manager: all visits read</field>
        <field name="model_id" ref="model_hr_hospital_visit"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_hospital_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Admin: full access -->
    <record id="rule_visit_admin" model="ir.rule">
        <field name="name">Admin: full access</field>
        <field name="model_id" ref="model_hr_hospital_visit"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_hospital_admin'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
