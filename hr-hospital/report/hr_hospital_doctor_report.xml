<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_doctor_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">
                            <span t-field="doc.full_name"/> - <span t-field="doc.speciality_id.name"/>
                        </h2>

                        <h4 class="mt-4">Visit History</h4>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Patient</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.visit_ids.sorted(key=lambda v: v.scheduled_datetime, reverse=True)" t-as="visit">
                                    <tr>
                                        <td><span t-field="visit.scheduled_datetime"/></td>
                                        <td><span t-field="visit.patient_id.full_name"/></td>
                                        <td><span t-field="visit.visit_type"/></td>
                                        <td t-if="visit.state == 'scheduled'" style="background-color: #ffc107; color: white;">
                                            <span t-field="visit.state"/>
                                        </td>
                                        <td t-elif="visit.state == 'completed'" style="background-color: #28a745; color: white;">
                                            <span t-field="visit.state"/>
                                        </td>
                                        <td t-elif="visit.state == 'cancelled'" style="background-color: #dc3545; color: white;">
                                            <span t-field="visit.state"/>
                                        </td>
                                        <td t-else="" style="background-color: #6c757d; color: white;">
                                            <span t-field="visit.state"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <h4 class="mt-4">Patients</h4>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Gender</th>
                                    <th>Date of Birth</th>
                                    <th>Phone</th>
                                    <th>Visit Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.patient_ids" t-as="patient">
                                    <t t-set="last_visit" t-value="patient.visit_ids.filtered(lambda v: v.doctor_id.id == doc.id).sorted(key=lambda v: v.scheduled_datetime, reverse=True)[:1]"/>
                                    <tr>
                                        <td><span t-field="patient.full_name"/></td>
                                        <td><span t-field="patient.gender"/></td>
                                        <td><span t-field="patient.date_of_birth"/></td>
                                        <td><span t-field="patient.phone"/></td>
                                        <t t-if="last_visit">
                                            <td t-if="last_visit.state == 'scheduled'" style="background-color: #ffc107; color: white;">
                                                <span t-esc="last_visit.state"/>
                                            </td>
                                            <td t-elif="last_visit.state == 'completed'" style="background-color: #28a745; color: white;">
                                                <span t-esc="last_visit.state"/>
                                            </td>
                                            <td t-elif="last_visit.state == 'cancelled'" style="background-color: #dc3545; color: white;">
                                                <span t-esc="last_visit.state"/>
                                            </td>
                                            <td t-else="" style="background-color: #6c757d; color: white;">
                                                <span t-esc="last_visit.state"/>
                                            </td>
                                        </t>
                                        <td t-else="">-</td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div class="mt-4 text-muted" style="position: absolute; bottom: 20px;">
                            <small>
                                Printed: <span t-esc="time.strftime('%Y-%m-%d %H:%M:%S')"/>
                                <t t-if="doc.env.company.city">
                                    | <span t-esc="doc.env.company.city"/>
                                </t>
                            </small>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_doctor" model="ir.actions.report">
        <field name="name">Doctor Report</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr-hospital.report_doctor_document</field>
        <field name="report_file">hr-hospital.report_doctor_document</field>
        <field name="binding_model_id" ref="model_hr_hospital_doctor"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>
</odoo>
