<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_patient_card_export_wizard_form" model="ir.ui.view">
        <field name="name">patient.card.export.wizard.form</field>
        <field name="model">patient.card.export.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group string="Patient">
                        <field name="patient_id"/>
                        <field name="lang_id"/>
                    </group>
                    <group string="Date Range">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <group>
                    <group string="Include">
                        <field name="include_diagnoses"/>
                        <field name="include_recommendations"/>
                    </group>
                    <group string="Export">
                        <field name="export_format"/>
                    </group>
                </group>
                <group invisible="not export_file">
                    <field name="export_file" filename="export_filename"/>
                    <field name="export_filename" invisible="1"/>
                </group>
                <footer>
                    <button name="action_export"
                            string="Export"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Close" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_patient_card_export_wizard" model="ir.actions.act_window">
        <field name="name">Export Patient Card</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.card.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_hospital_patient"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
