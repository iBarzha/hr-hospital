<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_doctor_schedule_wizard_form" model="ir.ui.view">
        <field name="name">doctor.schedule.wizard.form</field>
        <field name="model">doctor.schedule.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group string="General">
                        <field name="doctor_id"/>
                        <field name="start_week"/>
                        <field name="weeks_count"/>
                        <field name="schedule_type"/>
                    </group>
                    <group string="Working Time">
                        <field name="time_from" widget="float_time"/>
                        <field name="time_to" widget="float_time"/>
                        <field name="break_from" widget="float_time"/>
                        <field name="break_to" widget="float_time"/>
                    </group>
                </group>
                <group string="Working Days">
                    <group>
                        <field name="monday"/>
                        <field name="tuesday"/>
                        <field name="wednesday"/>
                        <field name="thursday"/>
                    </group>
                    <group>
                        <field name="friday"/>
                        <field name="saturday"/>
                        <field name="sunday"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_schedule"
                            string="Generate Schedule"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_doctor_schedule_wizard" model="ir.actions.act_window">
        <field name="name">Generate Schedule</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">doctor.schedule.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
