<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="disease_influenza" model="hr.hospital.disease">
        <field name="name">Influenza</field>
        <field name="icd10_code">J10</field>
        <field name="description">Viral infection that attacks respiratory system</field>
        <field name="danger_level">medium</field>
        <field name="is_contagious" eval="True"/>
        <field name="symptoms">Fever, cough, sore throat, body aches, fatigue</field>
    </record>

    <record id="disease_hypertension" model="hr.hospital.disease">
        <field name="name">Hypertension</field>
        <field name="icd10_code">I10</field>
        <field name="description">High blood pressure condition</field>
        <field name="danger_level">high</field>
        <field name="is_contagious" eval="False"/>
        <field name="symptoms">Headaches, shortness of breath, nosebleeds</field>
    </record>

    <record id="disease_diabetes" model="hr.hospital.disease">
        <field name="name">Diabetes Mellitus</field>
        <field name="icd10_code">E11</field>
        <field name="description">Chronic metabolic disorder affecting blood sugar levels</field>
        <field name="danger_level">high</field>
        <field name="is_contagious" eval="False"/>
        <field name="symptoms">Increased thirst, frequent urination, fatigue, blurred vision</field>
    </record>

    <record id="disease_covid19" model="hr.hospital.disease">
        <field name="name">COVID-19</field>
        <field name="icd10_code">U07.1</field>
        <field name="description">Coronavirus disease caused by SARS-CoV-2</field>
        <field name="danger_level">critical</field>
        <field name="is_contagious" eval="True"/>
        <field name="symptoms">Fever, cough, difficulty breathing, loss of taste or smell</field>
    </record>

    <record id="disease_pneumonia" model="hr.hospital.disease">
        <field name="name">Pneumonia</field>
        <field name="icd10_code">J18</field>
        <field name="description">Lung infection causing inflammation</field>
        <field name="danger_level">high</field>
        <field name="is_contagious" eval="True"/>
        <field name="symptoms">Cough with phlegm, fever, chills, difficulty breathing</field>
    </record>
</odoo>
